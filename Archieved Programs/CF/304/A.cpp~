#include <bits/stdc++.h>

#define pf printf
#define sf scanf
#define mp make_pair
#define pb push_back

using namespace std;

typedef struct pair<int, int> PII;

int main()
{
	long long int k, n, w, ans;
	cin >> k >> n >> w;
	ans = w*(w+1)*k/2;
	ans -= n;
	if(ans > 0)
		cout << ans;
	else
	cout << 0;
	return 0;
}
